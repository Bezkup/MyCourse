{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionString": {
    "Default": ""
  },

  "Courses":{
    "PerPage": 10,
    "Order":{
              "By": "Rating",
              "Ascending": false,
              "Allow": ["Title", "Rating", "CurrentPrice"]
    }
  },
  "MemoryCache":{
    "SizeLimit": 1000
  },
  
  "DistributedCache":{
    "Redis":{
      "Configuration": "localhost",
      "IstanceName": "MyCourseRedisCache"
    }
  },

  "ResponseCache":{
    "Home":{
      "Duration": 60,
      "Location": "Client",
      "VaryByQueryKeys": ["page"]
    }
  }
}


